        </div>
        <div class="form-container">
            <div class="form">


                <form action="@Url.Action("RegistrarUsuario","Acceso")" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="">
                        <div>
                            <label for="email" class="label">Direción de correo </label>
                        </div>


                        <input type="text" name="Correo" class="input input_user" id="Correo" value="" placeholder="Correo@ejemplo.com">
                        <div>
                            @*@Html.ValidationMessage("Correo", new { @class = "text-danger" })*@
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="">
                        <div class="">
                            <label for="password" class="label">Contraseña</label>
                        </div>
                        <input type="password" name="Clave" class="input input_password" id="password" value="" placeholder="*********">
                        <div>
                            @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                            @*@Html.ValidationMessage("Clave", new { @class = "text-danger" })*@
                        </div>

                    </div>
                    <div class="">
                        <div class="">
                            <label for="password" class="label">Repetir Contraseña</label>
                        </div>
                        <div>
                            <input type="password" name="ConfirmarClave" class="input input_password" id="password" value="" placeholder="*********">

                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                            @*@Html.ValidationMessage("Clave", new { @class = "text-danger" })*@
                        </div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" name="button" class="btn login_btn">Registrarse</button>
                        </div>
                        </div>
                </form>
            </div>


        </div>
        <div class="mt-4">
            <div class="d-flex justify-content-center links">
                Ya tienes una cuenta? <a href="@Url.Action("Login","Acceso")" class="ml-2">Inciar Sesion</a>
            </div>
        </div>

    </div>
    

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

</body>

</html>







